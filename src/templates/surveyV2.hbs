{{#> survey-layout}}

  {{#*inline "survey-content"}}
    {{> paragraph text=intro}}
    {{> paragraph text=question}}

    {{#if choices}}
      {{> choice-list}}
    {{/if}}

    {{#if ratings}}
      {{> number-scale}}
    {{/if}}

    {{#if submit}}
      {{> long-text}}
    {{/if}}

    {{#if emojis}}
      {{> smiley}}
    {{/if}}

    {{> paragraph text=outro}}
  {{/inline}}

{{/survey-layout}}
